<h1>Додавання нового рецепту</h1>

<%= form_with model: @recipe, url: recipes_path, local: true, multipart: true, class: "recipe-form" do |form| %>
    <div class="form-group">
      <%= form.label :title, "Заголовок" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>


    <div class="form-group">
      <%= form.label :text , "Опис" %>
      <%= form.text_area :text, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :image, "Зображення" %>
      <%= form.file_field :image, class: 'form-control', required: true  %>
    </div>

    <div class="form-group">
      <%= form.label :html_details, "Текст рецепту (HTML)" %>
      <%= form.text_area :html_details, class: "form-control" , required: true  %>
    </div>


    <%= form.submit "Add Recipe", class: "btn btn-primary" %>
<% end %>